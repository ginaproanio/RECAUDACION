# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rec_system

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001

# Frontend Configuration (for production builds)
REACT_APP_API_URL=http://localhost:3001/api

# PayPhone Configuration (for payments)
PAYPHONE_API_KEY=your-payphone-api-key
PAYPHONE_API_SECRET=your-payphone-api-secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
